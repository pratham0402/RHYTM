<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#111"
    android:layout_marginTop="5dp"
    android:id="@+id/song_items">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/song_img"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_text"
        android:text="File name"
        android:layout_toEndOf="@+id/song_img"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/song_img"
        android:layout_toStartOf="@+id/menu_opt"
        android:layout_centerVertical="true"
        android:textColor="@color/colorAccent"
        android:layout_toLeftOf="@+id/menu_opt" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/menu_opt"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>